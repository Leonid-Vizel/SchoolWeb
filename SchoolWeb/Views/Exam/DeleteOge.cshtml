@model int
@{
    ViewData["Title"] = "Подтверждение";
}

<div class = "text-center">
    <h3>Вы уверены, что хотите удалить результаты ОГЭ @Model года с сайта?</h3>
    <form method="post">
        <a class="btn btn-outline-dark btn-lg mt-2" asp-controller="Exam" asp-action="Index"><i class="bi bi-arrow-return-left"></i> Отмена</a>
        <button type="submit" class = "btn btn-outline-danger btn-lg mt-2"><i class="bi bi-trash"></i> Удалить</button>
    </form>
</div>
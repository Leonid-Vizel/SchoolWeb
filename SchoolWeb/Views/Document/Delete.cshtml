@model int
@{
    ViewData["Title"] = "Удаление документа";
}

<hr />
<h2 class="text-center">Удаление документа #@Model</h2>
<hr />

<div class="container">
    <div class="justify-content-center">
        <form method="post">
            <a class="btn btn-outline-primary" asp-controller="Document" asp-action="Index"><i class="bi bi-arrow-return-left"></i> Назад</a>
            <button class="btn btn-outline-danger" type="submit"><i class="bi bi-trash"></i> Удалить</button>
        </form>
    </div>
</div>
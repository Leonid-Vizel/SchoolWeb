@model Administration
@{
    ViewData["Title"] = "Редактирование администратора";
}

<hr />
<h2 class="text-center">Редактирование администратора</h2>
<hr />

<form method="post">
    <div class="form-group row">
        <label asp-for="Position" class="col-sm-2 col-form-label mb-2"></label>
        <div class="col-sm-10">
            <input asp-for="Position" class="form-control">
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label mb-2"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Education" class="col-sm-2 col-form-label mb-2"></label>
        <div class="col-sm-10">
            <input asp-for="Education" class="form-control">
            <span asp-validation-for="Education" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Category" class="col-sm-2 col-form-label mb-2"></label>
        <div class="col-sm-10">
            <input asp-for="Category" class="form-control">
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Phone" class="col-sm-2 col-form-label mb-2"></label>
        <div class="col-sm-3">
            <input asp-for="Phone" class="form-control">
        </div>
        <div class="col-sm-7">
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label mb-2"></label>
        <div class="col-sm-4">
            <input asp-for="Email" class="form-control">
        </div>
        <div class="col-sm-6">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <button type = "submit" class="btn btn-lg btn-outline-primary">Редактировать</button>
</form>

@section Scripts
    {
        <partial name="_ValidationScriptsPartial" />
    }